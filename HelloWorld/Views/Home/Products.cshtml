@model HelloWorld.Models.Product[]

@{
    ViewBag.Title = "Products";
}

@if (Model.Length > 0)
{
    <table>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
            </tr>
        }
    </table>
}
else
{
    <h2>No product data found.</h2>
}